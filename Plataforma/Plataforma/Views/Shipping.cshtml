@inherits Umbraco.Web.Mvc.UmbracoViewPage<UCommerce.RazorStore.Models.ShippingViewModel>

    @{
    Layout = "Layout.cshtml";
    }

    <form method="post" class="col-sm-9 col-md-9">
        <div class="row col-sm-12 col-md-12">
            <div class="col-md-6">
                <h3>Metodo de envio</h3>
                <br />
                @if (Model.AvailableShippingMethods.Count > 0)
                {
                foreach (var shippingMethod in Model.AvailableShippingMethods)
                {
                <label class="radio">
                    @if (shippingMethod.Selected)
                    {
                    @Html.RadioButtonFor(x => x.SelectedShippingMethodId, shippingMethod.Value, new { @checked = "checked" })
                    @shippingMethod.Text
                    } else
                    {
                    @Html.RadioButtonFor(x => x.SelectedShippingMethodId, shippingMethod.Value)
                    @shippingMethod.Text
                    }
                </label>
                }
                }
                else
                {
                <p class="alert">Alerta: No hay metodos de envio configurados para el pais de envio @Model.ShippingCountry </p>
                }
            </div>
        </div>
        <a href="/basket/address.aspx" class="btn btn-secondary">Volver al formulario anterior</a>
        <button name="update-shipment" class="pull-xs-right btn btn-secondary btn-lg btn-success" type="submit">Continuar a la pagina del pago <i class="icon-arrow-right icon-white"></i> </button>
    </form>
