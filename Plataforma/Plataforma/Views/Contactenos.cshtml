@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "layoutSitioPimas.cshtml";
}

<section class="mbr-section article mbr-section__container mbr-after-navbar" id="content6-1l" style="background-color: rgb(255, 255, 255); padding-top: 215px; padding-bottom: 20px;">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 lead"><img class="img-responsive" src="@Umbraco.Media(CurrentPage.ilustracion).url" width="600" height="800" alt=""/></div>
      <div class="col-xs-12 col-md-6 lead">
        <h3 class="mbr-section-title">@CurrentPage.Parent.ContactoLbl</h3>
        <p><br>
        </p>
        <p><i class="fa fa-map-marker" aria-hidden="true"></i> &nbsp; Dirección: @Umbraco.Field("#Direccion", altFieldAlias: "#Direccion", convertLineBreaks: true, removeParagraphTags: true)</p>
        <p><i class="fa fa-phone" aria-hidden="true"></i>&nbsp; Teléfono: @Umbraco.Field("#Telefono", convertLineBreaks: true, removeParagraphTags: true)</p>
        <p><i class="fa fa-mobile" aria-hidden="true"></i>&nbsp; @Umbraco.Field("#Movil", altFieldAlias: "#Movil", convertLineBreaks: true, removeParagraphTags: true)</p>
