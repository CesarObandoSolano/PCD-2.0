@using UCommerce.RazorStore.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<AddressDetailsViewModel>
    @{
    Layout = "Layout.cshtml";
    }

    <form method="post" class="validate">
        <div class="col-md-12 no-horizontal-padding">
            <div class="col-md-6 well no-left-margin">
                <legend>Dirección de facturación</legend>
                <div class="col-md-6 control-group form-group">

                    <label>Nombre</label>
                    @Html.TextBoxFor(x => x.BillingAddress.FirstName, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>E-mail</label>
                    @Html.TextBoxFor(x => x.BillingAddress.EmailAddress, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Attention</label>
                    @Html.TextBoxFor(x => x.BillingAddress.Attention, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Dirección</label>
                    @Html.TextBoxFor(x => x.BillingAddress.Line2, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Codigo Postal</label>
                    @Html.TextBoxFor(x => x.BillingAddress.PostalCode, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Telefono</label>
                    @Html.TextBoxFor(x => x.BillingAddress.PhoneNumber, new { @class = "col-md-12 form-control margin-bottom" })

                </div>

                <div class="col-md-6 control-group form-group">

                    <label>Apellidos</label>
                    @Html.TextBoxFor(x => x.BillingAddress.LastName, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Compañia</label>
                    @Html.TextBoxFor(x => x.BillingAddress.CompanyName, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Distrito</label>
                    @Html.TextBoxFor(x => x.BillingAddress.Line1, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Provincia</label>
                    @Html.TextBoxFor(x => x.BillingAddress.City, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Pais</label>
                    @Html.DropDownList("BillingAddress.CountryId", Model.AvailableCountries, new { @class = "countryDropdownCheckout margin-bottom form-control" })

                    <label>Telefono 2</label>
                    @Html.TextBoxFor(x => x.BillingAddress.MobilePhoneNumber, new { @class = "col-md-12 form-control margin-bottom" })

                </div>

            </div>

            <div id="shippingAddress" class="col-md-6 well display-none">
                <legend>Dirección de envio</legend>

                <div class="col-md-6 control-group form-group">

                    <label>Nombre</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.FirstName, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>E-mail</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.EmailAddress, new { @class = "col-md-12 form-control required email margin-bottom" })

                    <label>Attention</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.Attention, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Dirección</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.Line2, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Codigo Postal</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.PostalCode, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Telefono</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.PhoneNumber, new { @class = "col-md-12 form-control margin-bottom" })

                </div>

                <div class="col-md-6 control-group form-group">

                    <label>Apellido</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.LastName, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Compañia</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.CompanyName, new { @class = "col-md-12 form-control margin-bottom" })

                    <label>Distrito</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.Line1, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Provincia</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.City, new { @class = "col-md-12 form-control required margin-bottom" })

                    <label>Pais</label>
                    @Html.DropDownList("ShippingAddress.CountryId", Model.AvailableCountries, new { @class = "countryDropdownCheckout margin-bottom form-control" })

                    <label>Celular</label>
                    @Html.TextBoxFor(x => x.ShippingAddress.MobilePhoneNumber, new { @class = "col-md-12 form-control margin-bottom" })

                </div>

            </div>
        </div>

        <label for="toggleShippingView" class="display-inline">Usa una dirección diferente para el envio</label>
        <input id="toggleShippingView" type="checkbox" name="IsShippingAddressDifferent" class="display-inline" />

        <div class="display-block">
            <a href="/basket" class="btn btn-secondary">Volver al carrito</a>
            <input type="submit" class="btn btn-secondary btn-lg pull-right" value="Continuar al metodo de envio" />
        </div>
    </form>








