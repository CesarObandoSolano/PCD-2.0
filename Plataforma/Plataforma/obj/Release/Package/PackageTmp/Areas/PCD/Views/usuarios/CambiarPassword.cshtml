@model Plataforma.Areas.PCD.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer contraseña";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
            {
    @Html.AntiForgeryToken()

    <div class="col-lg-9">
        <h4>Restablezca la contraseña.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @if (ViewBag.idUsuario != null)
        {
            <input type="hidden" name="idUsuario" id="idUsuario">
        }
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Restablecer" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
