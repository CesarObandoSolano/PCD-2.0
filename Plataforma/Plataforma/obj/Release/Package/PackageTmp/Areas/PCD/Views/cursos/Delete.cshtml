@model Plataforma.Areas.PCD.Models.curso

@{
    ViewBag.Title = "Eliminar";
}
<link rel="stylesheet" type="text/css" href="~/Content/custombootstrap.css" />
<h2>Eliminar</h2>

<h3>¿Estas seguro de que deseas eliminar este curso?</h3>
<div class="col-lg-9">
    <h4>Curso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Curso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.curso1)
        </dd>

        <dt>
            Visitas
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contador_visitas)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-lg-9">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    }
</div>
