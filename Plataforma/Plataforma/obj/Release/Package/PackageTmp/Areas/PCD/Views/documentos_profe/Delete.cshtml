@model Plataforma.Areas.PCD.Models.documentos_profe

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>
<link rel="stylesheet" type="text/css" href="~/Content/custombootstrap.css" />

<h3>Estas seguro de que deseas eliminar este documento?</h3>
<div class="col-lg-9">
    <h4>Documento Profesor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Titulo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.titulo)
        </dd>

        <dt>
            Curso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.curso.curso1)
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuario.nombre)
            @Html.DisplayFor(model => model.usuario.apellidos)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    }
</div>
