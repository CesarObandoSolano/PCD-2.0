@model IEnumerable<Plataforma.Areas.PCD.Models.documentos_profe>

@{
    ViewBag.Title = "Indice";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        function Buscar() {
            var nombre = document.getElementById('nombre').value;
            $("#tabla-documentos").load("/PCD/documentos_profe/Index/?nombre=" + nombre + " #tabla-documentos");
            return false;
        }
    </script>
</head>

<h2>Indice</h2>
<div class="col-lg-9">
    <p>
        @Html.ActionLink("Insertar un nuevo documento", "Create")
    </p>
    <div class="col-lg-9 barra-busqueda form-group">
        @Html.Label("Buscar:", htmlAttributes: new { @class = "col-md-2" })
        <input type="text" id="nombre" name="nombre" placeholder="Titulo del documento" class="form-control" onkeypress="Buscar()" />
    </div>
    <table class="table" id="tabla-documentos">
        <tr>
            <th>
                Titulo
            </th>
            <th>
                Curso
            </th>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.curso.curso1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario.nombre)
                    @Html.DisplayFor(modelItem => item.usuario.apellidos)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Ver Detalles", "Details", new { id = item.id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>