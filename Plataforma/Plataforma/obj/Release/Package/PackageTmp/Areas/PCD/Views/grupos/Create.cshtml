@model Plataforma.Areas.PCD.Models.grupos

@{
    ViewBag.Title = "Insertar";
}

<h2>Insertar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-9">
        <h4>Grupo</h4>
        <hr />
        @Html.ValidationSummary(true, "No se pudo insertar el grupo", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.grupo, "Grupo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.grupo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.grupo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Curso", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cursos", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.permisos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Profesores", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="profesores" id="profesores" class="form-control">
                    @foreach (var item in ViewBag.profesores)
                    {
                        <option value="@item.id">@item.nombre @item.apellidos</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Permisos", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("permiso", null, htmlAttributes: new { @class = "form-control", @multiple = "multiple", @required = "required" })
                @Html.ValidationMessageFor(model => model.permisos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usuarios, "Cantidad de Estudiantes", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" min="0" name="CantidadUsuarios" id="CantidadUsuarios" class="form-control">
                @Html.ValidationMessageFor(model => model.usuarios, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Insertar" class="btn btn-default" />
            </div>
        </div>
        <div class="col-lg-9">
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
