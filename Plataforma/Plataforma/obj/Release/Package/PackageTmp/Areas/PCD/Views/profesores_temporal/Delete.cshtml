@model Plataforma.Areas.PCD.Models.profesores_temporal

@{
    ViewBag.Title = "Eliminar";
}
<link rel="stylesheet" type="text/css" href="~/Content/custombootstrap.css" />
<h2>Eliminar</h2>

<h3>Estas seguro de que deseas eliminar este profesor?</h3>
<div class="col-lg-9">
    <h4>Profesor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
            @Html.DisplayFor(model => model.apellidos)
        </dd>

        <dt>
            Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo)
        </dd>

        <dt>
            Telefono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefono)
        </dd>

        <dt>
            Información Adicional
        </dt>

        <dd>
            @Html.DisplayFor(model => model.informacion_opcional)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    }
</div>
