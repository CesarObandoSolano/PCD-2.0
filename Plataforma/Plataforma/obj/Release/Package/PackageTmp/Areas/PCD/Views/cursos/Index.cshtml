@model IEnumerable<Plataforma.Areas.PCD.Models.curso>

@{
    ViewBag.Title = "Indice";
}

<h2>Cursos</h2>
<head>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        function Buscar() {
            var nombre = document.getElementById('nombre').value;
            $("#tabla-cursos").load("/PCD/cursos/Index/?nombre=" + nombre + " #tabla-cursos");
            return false;
        }
    </script>
</head>
<div class="col-lg-9">
    <p>
        @Html.ActionLink("Insertar un curso nuevo", "Create")
    </p>
    <div class="col-lg-9 barra-busqueda form-group">
        @Html.Label("Buscar:", htmlAttributes: new { @class = "col-md-2" })
        <input type="text" id="nombre" name="nombre" placeholder="Nombre del curso" class="form-control" onkeypress="Buscar()" />
    </div>
    <table class="table" id="tabla-cursos">
        <tr>
            <th>
                Curso
            </th>
            <th>
                Visitas
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.curso1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contador_visitas)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Agregar Documentos", "AgregarDocumentos", new { id = item.id })|
                    @Html.ActionLink("Matricular Usuarios", "MatricularUsuarios", new { id = item.id })|
                    @Html.ActionLink("Ver Detalles", "Details", new { id = item.id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
