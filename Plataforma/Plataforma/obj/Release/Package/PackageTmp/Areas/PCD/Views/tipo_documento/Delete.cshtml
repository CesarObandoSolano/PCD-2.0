@model Plataforma.Areas.PCD.Models.tipo_documento

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>
<link rel="stylesheet" type="text/css" href="~/Content/custombootstrap.css" />
<h3>¿Estas seguro de que quieres eliminar este tipo de documento?</h3>
<div class="col-lg-9">
    <h4>Tipo de Documento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tipo de Documento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_documento1)
        </dd>
        <br />

        <dt>
            Icono
        </dt>

        <dd>
            @Html.HiddenFor(model => model.icono)
            <img src="@Url.Content(@Model.icono)" alt="Image" id="icono" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        if (Model.documentos.Count <= 0)
        {
            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-default" /> |
                @Html.ActionLink("Volver al indice", "Index")
            </div>
        }
        else
        {
            <div class="form-actions no-color">
                <p>Este elemento no puede ser eliminado.</p> |
                @Html.ActionLink("Volver al indice", "Index")
            </div>
        }


    }
</div>
