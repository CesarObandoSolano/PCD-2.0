@model Plataforma.Areas.PCD.Models.curso
@{
    ViewBag.Title = "Editar";
}
<h2 class="class-forms">Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-9">
        <h1 class="class-forms"><i class="fa fa-graduation-cap" aria-hidden="true"></i> &nbsp;Cursos</h1>
        <h6>Edite la información necesaria del curso</h6>
        <br><br>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.contador_visitas)
        <div class="form-group">
            @Html.LabelFor(model => model.curso1, "Curso", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.curso1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.curso1, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-lg-9">
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
