@model Plataforma.Areas.PCD.Models.unidade

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<link rel="stylesheet" type="text/css" href="~/Content/custombootstrap.css" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-lg-9">
        <div class="form-horizontal">
            <h4>Unidad</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.unidad, "Unidad", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.unidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.unidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    </div>
}


