@model IEnumerable<Plataforma.Areas.PCD.Models.colegio>

@{
    ViewBag.Title = "Indice";
}
<head>
    <script>
        function Buscar() {
            var nombre = document.getElementById('nombre').value;
            $("#tabla-colegios").load("/PCD/colegios/Index/?nombre=" + nombre + " #tabla-colegios");
            return false;
        }
    </script>
</head>

<h1 class="class-forms"><i class="fa fa-graduation-cap" aria-hidden="true"></i> &nbsp;Colegios</h1>
<h6>Listado de colegios</h6>
<br><br>
    <div class="col-lg-12">

        <p>
            @Html.ActionLink("Insertar un colegio", "Create")
        </p>
        <div class="form-group">
            @Html.Label("Buscar:", htmlAttributes: new { @class = "control-label col-md-4", style = "top: 10px;" })
            <div class="col-md-10">
                <input type="text" id="nombre" name="nombre" placeholder="Nombre del colegio" class="form-control text-box single-line" onkeypress="Buscar()" style = "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" />
                </div>
            </div>
        <table class="table" id="tabla-colegios">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Pais
                </th>
                <th>
                    Tipo
                </th>
                <th>Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pais.pais1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipo_colegio.tipo_institucion)
                    </td>
                    <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "enlace-tabla editar", @title ="Editar" })
                            @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "enlace-tabla detalles", @title = "Detalles" })
                            @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "enlace-tabla eliminar", @title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
