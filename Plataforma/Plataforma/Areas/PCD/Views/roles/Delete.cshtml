@model Plataforma.Areas.PCD.Models.role

@{
    ViewBag.Title = "Eliminar";
}
<h1 class="class-forms">Eliminar</h1>

<h3 class="class-forms">¿Estas seguro de que quieres eliminar este rol?</h3>
<div class="col-md-12">
    <h4>Rol</h4>
    @Html.HiddenFor(model => model.id)
    <dl class="dl-horizontal">
        <dt>
            Rol
        </dt>
        <dd>
            @Html.DisplayFor(model => model.rol)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver al indice", "Index")
        </div>
    }
</div>
