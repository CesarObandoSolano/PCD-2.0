
@{
    ViewBag.Title = "Generar Usuarios";
}
<h2 class="class-forms">Generar Usuarios</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-9">
        <h1 class="class-forms"><i class="fa fa-graduation-cap" aria-hidden="true"></i> &nbsp;Usuarios</h1>
        <h6>Agregue la cantidad de usuarios al curso elegido</h6>
        <br><br>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Curso", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                <select name="cursos" id="cursos" class="form-control" required>
                    <option value="">Selecciona un curso...</option>
                    @foreach (var item in ViewBag.cursos)
                    {
                        <option value="@item.id">@item.curso1</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Cantidad de Estudiantes", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                <input type="number" min="0" name="CantidadUsuarios" id="CantidadUsuarios" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Generar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

