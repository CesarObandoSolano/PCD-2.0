
@{
    ViewBag.Title = "Restablecer Contraseña";
}


@using (Html.BeginForm())
            {

    <div class="col-md-12">
        <h1 class="class-forms">Restablezca la contraseña.</h1>
        <h6>Agregue una contraseña deseada</h6>
        <br />
        <br />
        <h5 class="class-forms">Recibiras tu nueva contraseña en tu correo electronico.</h5>
        <div class="form-group">
            @Html.Label("Ingresa tu nombre de usuario o correo", new { @class = "col-md-4 control-label" })
            <div class="col-md-10">
                <input id="username" name="username" type="text" class="form-control" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" class="btn btn-primary" value="Restablecer" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
