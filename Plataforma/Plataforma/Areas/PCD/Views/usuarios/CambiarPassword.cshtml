@model Plataforma.Areas.PCD.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer contraseña";
}


@using (Html.BeginForm())
            {
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <h1 class="class-forms">Restablezca la contraseña.</h1>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @if (ViewBag.idUsuario != null)
        {
            <input type="hidden" name="idUsuario" id="idUsuario">
        }
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "col-md-4 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" class="btn btn-primary" value="Restablecer" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
