@model Plataforma.Areas.PCD.Models.tipo_documento

@{
    ViewBag.Title = "Detalles";
}
<div class="col-md-12">
    <h1 class="class-forms">
        <i class="fa fa-user-circle" aria-hidden="true"></i>
        Detalles
    </h1>
    <h4 class="class-forms">Tipo de Documento</h4>
    <dl class="dl-horizontal">
        <dt>
            Tipo de Documento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tipo_documento1)
        </dd>
        <br />
        <dt>
            Icono
        </dt>
        <dd>
            @Html.HiddenFor(model => model.icono)
            <img src="@Url.Content(@Model.icono)" alt="Image" width="100" height="65" id="icono" />
        </dd>
    </dl>
    <div class="col-lg-9">
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
            @Html.ActionLink("Volver al indice", "Index")
        </p>
    </div>
