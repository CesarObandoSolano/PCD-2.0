@model IEnumerable<Plataforma.Areas.PCD.Models.unidade>

@{
    ViewBag.Title = "Indice";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        function Buscar() {
            var nombre = document.getElementById('nombre').value;
            $("#tabla-unidades").load("/PCD/unidades/Index/?nombre=" + nombre + " #tabla-unidades");
            return false;
        }
    </script>
</head>

<h1 class="class-forms"><i class="fa fa-graduation-cap" aria-hidden="true"></i> &nbsp;Unidades</h1><br><br>
<div class="col-md-12">
    <p>
        @Html.ActionLink("Insertar una nueva unidad", "Create")
    </p>
    <div class="form-group">
        @Html.Label("Buscar:", htmlAttributes: new { @class = "control-label col-md-4", style = "top: 10px;" })
        <div class="col-md-10">
            <input type="text" id="nombre" name="nombre" placeholder="Nombre de la unidad" class="form-control text-box single-line" onkeypress="Buscar()" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" />
        </div>
    </div>
    <table class="table" id="tabla-unidades">
        <tr>
            <th>
                Unidad
            </th>
            <th>Acciones</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.unidad)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "enlace-tabla editar", @title = "Editar" })
                    @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "enlace-tabla detalles", @title = "Detalles" })
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "enlace-tabla eliminar", @title = "Eliminar" })                
                </td>
            </tr>
        }
    </table>
</div>