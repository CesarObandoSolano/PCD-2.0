@model Plataforma.Areas.PCD.Models.unidade

@{
    ViewBag.Title = "Eliminar";
}

<h1 class="class-forms">Eliminar</h1>

<h3 class="class-forms">Estas seguro de que deseas eliminar esta unidad?</h3>
<div class="col-md-12">
    <h4 class="class-forms">Unidad</h4>
    <dl class="dl-horizontal">
        <dt>
            Unidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.unidad)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (Model.documentos.Count <= 0)
        {
            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                @Html.ActionLink("Volver al indice", "Index")
            </div>
        }
        else
        {
            <div class="form-actions no-color">
                <p>Este elemento no puede ser eliminado.</p> |
                @Html.ActionLink("Volver al indice", "Index")
            </div>
        }
    }
</div>
