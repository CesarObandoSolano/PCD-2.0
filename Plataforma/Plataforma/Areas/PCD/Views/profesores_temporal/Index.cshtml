@model IEnumerable<Plataforma.Areas.PCD.Models.profesores_temporal>

@{
    ViewBag.Title = "Indice";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        function Buscar() {
            var nombre = document.getElementById('nombre').value;
            $("#tabla-profesores").load("../profesores_temporal/Index/?nombre=" + nombre + " #tabla-profesores");
            return false;
        }
        function confirmacion() {
            return confirm("¿Estas seguro de que deseas eliminar este profesor?");
        }
    </script>
</head>

<h1 class="class-forms"><i class="fa fa-graduation-cap" aria-hidden="true"></i> &nbsp;Profesores</h1>
<h6>Listado de profesores</h6>
<br><br>
<div class="col-md-12">
    <p>
        @Html.ActionLink("Insertar un profesor nuevo", "Create")
    </p>
    <div class="form-group">
        @Html.Label("Buscar:", htmlAttributes: new { @class = "control-label col-md-4", style = "top: 10px;" })
        <div class="col-md-10">
            <input type="text" id="nombre" name="nombre" placeholder="Nombre del profesor" class="form-control text-box single-line" onkeypress="Buscar()" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" />
        </div>
    </div>
    <table class="table" id="tabla-profesores">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Usuario
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                    @Html.DisplayFor(modelItem => item.apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "enlace-tabla detalles", @title = "Detalles" })
                    @Html.ActionLink(" ", "Registrar", new { id = item.id }, new {@class="enlace-tabla aceptar", @title="Aceptar Profesor", onclick = "return confirm('¿Estas seguro de que deseas aceptar este profesor ? ');" }) 
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "enlace-tabla eliminar-profesor", @title = "Eliminar Profesor", onclick = "return confirm('¿Estas seguro de que deseas eliminar este profesor ? ');" })
                </td>
            </tr>
        }

    </table>
</div>

