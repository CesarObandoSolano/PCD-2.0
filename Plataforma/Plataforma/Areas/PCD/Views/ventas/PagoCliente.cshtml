
@{
    ViewBag.Title = "PagoCliente";
}


<h2 class="class-forms">Realizar Pago</h2>

    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-9">
        <h1 class="class-forms"><i class="fa fa-credit-card" aria-hidden="true"></i> &nbsp;Pago</h1>
        <h6>Elija su método de pago, si no tiene uno por favor agréguelo</h6>
        <br><br>
             @foreach (var item in ViewBag.tarjetas)
             {
                <label id="tarjeta" for="tarjeta">@item.Nickname</label>
                <input class="class-forms" type="checkbox" value="@item.Id" id="tarjeta" name="tarjeta"/><br />                
             }
        

        <br><br>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Agregar método de pago" class="btn btn-primary" />
            </div>
        </div>
        <br><br>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Pagar" class="btn btn-primary" />
            </div>
        </div>
    </div>

