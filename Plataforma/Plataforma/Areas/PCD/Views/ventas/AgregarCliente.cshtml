
@{
    ViewBag.Title = "Agregar datos comprador";
}

<h2 class="class-forms">Agregar datos de comprador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-lg-9">
        <h1 class="class-forms"><i class="fa fa-user-circle" aria-hidden="true"></i> &nbsp;Comprador</h1>
        <h6>Agregue los datos solicitados para poder realizar su compra</h6>
        <br><br>
        <div class="form-group">
            <label id="tipoIdentificacion" for="tipoIdentificacion" class="control-label col-md-4">Tipo de identificación</label>
            <div class="col-md-10">
                <select class="form-control" id="tipoIdentificacion" name="tipoIdentificacion">
                    <option value="1">Cédula nacional</option>
                    <option value="2">Pasaporte</option>
                    <option value="3">Cédula residencia</option>
                    <option value="4">Otro</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label id="identificacion" for="identificacion" class="control-label col-md-4">Número de identificación</label>
            <div class="col-md-10">
                <input type="text" name="identificacion" id="identificacion" value="" class="form-control text-box single-line" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" />
            </div>
        </div>
        <div class="form-group">
            <label id="pin" for="pin" class="control-label col-md-4">Pin</label>
            <div class="col-md-10">
                <input type="number" name="pin" id="pin" value="" class="form-control text-box single-line" max="999999" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" />
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}